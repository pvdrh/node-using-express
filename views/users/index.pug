extends ../layouts/general
block content
    h1 User List
        br
        a.btn.btn-primary(href="/users/create") New
        form(action="/users/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control")
            button(class="btn btn-primary ml-2") Search
        table.table
            tr
                th Avatar
                th Name
                th Phone
                th Action
                  each user in users
                      tr
                            td
                                img(src=user.avatar, width="64", height="64")
                            td= user.name
                            td= user.phone
                            td
                              a(href="/users/" + user.id) View
        nav(aria-label='...')
            ul.pagination
                li.page-item.disabled
                a.page-link(href='/users/?page=' + prevPage) Previous
                li.page-item
                a.page-link(href='/users/?page=' + nextPage) Next
